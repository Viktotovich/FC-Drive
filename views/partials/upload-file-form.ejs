<form
  action="/folder/<%=folderId%>/createFile"
  method="POST"
  enctype="multipart/form-data"
  class="grid justify-center"
>
  <div class="grid justify-center">
    <label for="userFile" class="mb-2 block">Upload your file: </label>
    <input
      type="file"
      id="userFile"
      name="userFile"
      required
      class="rounded-sm border-sky-900 pl-2 hover:bg-sky-50 border-1 hover:cursor-pointer"
    />
  </div>
  <button
    type="submit"
    class="mt-10 py-2 px-14 rounded-sm bg-blue-950 text-white hover:bg-blue-900 hover:cursor-pointer"
  >
    Submit
  </button>
</form>
