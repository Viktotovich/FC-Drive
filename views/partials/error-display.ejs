<div class="mb-10 grid justify-center">
  <ol>
    <% if (typeof errors !== "undefined" && errors.length > 0) { %>
    <p class="underline">Action failed, as there are some problem(s):</p>
    <% errors.forEach((error) => { %>
    <li class="flex justify-center before:content-['❌']"><%=error%></li>
    <% }) %> <% } %>
  </ol>
</div>
